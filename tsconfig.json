{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    "paths": {
      "*": ["./*"],
      "@/*": ["./renderer/src/*"],
      "@lena/chakra-provider": ["../../libs/chakra-provider/src/index.ts"],
      "@lena/query-provider": ["../../libs/query-provider/src/index.ts"]
    }
  },
  "include": [
    "renderer/**/*.ts",
    "renderer/**/*.tsx",
    "renderer/**/*.d.ts",
    "shared/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "schema.ts",
    "../../libs/query-provider/src/**/*.ts",
    "../../libs/query-provider/src/**/*.tsx",
    "../../libs/chakra-provider/src/**/*.ts",
    "../../libs/chakra-provider/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app",
    ".next",
    "main",
    "renderer/src/generated/zenstack/policy.ts",
    "renderer/src/generated/prisma/**/*.js",
    "../../libs/**/*.spec.ts",
    "../../libs/**/*.spec.tsx"
  ],
  "references": []
}

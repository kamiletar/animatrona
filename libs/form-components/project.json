{
  "name": "@lena/form-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/form-components/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:ui"],
  "targets": {
    "oxlint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bunx oxlint src --config ../../.oxlintrc.json",
        "cwd": "libs/form-components"
      },
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/.oxlintrc.json"],
      "metadata": {
        "description": "Fast lint with oxlint",
        "technologies": ["oxlint"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "dependsOn": ["oxlint"],
      "options": {
        "lintFilePatterns": ["libs/form-components/**/*.{ts,tsx}"]
      },
      "metadata": {
        "description": "Run ESLint on form-components library",
        "technologies": ["eslint"]
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint . --fix",
        "cwd": "libs/form-components"
      },
      "cache": false,
      "metadata": {
        "description": "Run ESLint with auto-fix",
        "technologies": ["eslint"]
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
        "cwd": "libs/form-components"
      },
      "cache": false,
      "metadata": {
        "description": "Format files with Prettier",
        "technologies": ["prettier"]
      }
    },
    "format:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
        "cwd": "libs/form-components"
      },
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/.prettierrc", "{workspaceRoot}/.prettierignore"],
      "metadata": {
        "description": "Check file formatting",
        "technologies": ["prettier"]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --build tsconfig.lib.json --emitDeclarationOnly",
        "cwd": "libs/form-components"
      },
      "dependsOn": ["^typecheck"],
      "cache": true,
      "inputs": [
        "default",
        "^production",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/tsconfig.lib.json",
        "{workspaceRoot}/tsconfig.base.json"
      ],
      "outputs": [
        "{projectRoot}/dist/**/*.d.ts",
        "{projectRoot}/dist/**/*.d.ts.map",
        "{projectRoot}/dist/tsconfig.lib.tsbuildinfo"
      ],
      "metadata": {
        "description": "Type-check library and generate declarations",
        "technologies": ["typescript"]
      }
    },
    "typecheck:tsgo": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsgo --build tsconfig.lib.json --emitDeclarationOnly",
        "cwd": "libs/form-components"
      },
      "dependsOn": ["^typecheck:tsgo"],
      "cache": true,
      "inputs": [
        "default",
        "^production",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/tsconfig.lib.json",
        "{workspaceRoot}/tsconfig.base.json"
      ],
      "outputs": [
        "{projectRoot}/dist/**/*.d.ts",
        "{projectRoot}/dist/**/*.d.ts.map",
        "{projectRoot}/dist/tsconfig.lib.tsbuildinfo"
      ],
      "metadata": {
        "description": "Type-check library and generate declarations with tsgo (38x faster)",
        "technologies": ["typescript", "tsgo"]
      }
    },
    "validate": {
      "executor": "nx:noop",
      "dependsOn": ["lint", "format:check", "typecheck"],
      "metadata": {
        "description": "Run all validation checks"
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{workspaceRoot}/coverage/libs/form-components"],
      "options": {
        "config": "libs/form-components/vitest.config.ts"
      },
      "metadata": {
        "description": "Run unit tests",
        "technologies": ["vitest"]
      }
    }
  }
}

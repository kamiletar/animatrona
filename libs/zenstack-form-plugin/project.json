{
  "name": "@lena/zenstack-form-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/zenstack-form-plugin/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:util"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --project tsconfig.lib.json",
        "cwd": "libs/zenstack-form-plugin"
      },
      "cache": true,
      "inputs": ["default", "{projectRoot}/tsconfig.lib.json"],
      "outputs": ["{projectRoot}/dist"],
      "metadata": {
        "description": "Build plugin to JavaScript",
        "technologies": ["typescript"]
      }
    },
    "oxlint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bunx oxlint src --config ../../.oxlintrc.json",
        "cwd": "libs/zenstack-form-plugin"
      },
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/.oxlintrc.json"],
      "metadata": {
        "description": "Fast lint with oxlint",
        "technologies": ["oxlint"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "dependsOn": ["oxlint"],
      "options": {
        "lintFilePatterns": ["libs/zenstack-form-plugin/**/*.ts"]
      },
      "metadata": {
        "description": "Run ESLint on zenstack-form-plugin library",
        "technologies": ["eslint"]
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write \"**/*.{ts,js,json,md}\"",
        "cwd": "libs/zenstack-form-plugin"
      },
      "cache": false,
      "metadata": {
        "description": "Format files with Prettier",
        "technologies": ["prettier"]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --build tsconfig.lib.json --emitDeclarationOnly",
        "cwd": "libs/zenstack-form-plugin"
      },
      "dependsOn": ["^typecheck"],
      "cache": true,
      "inputs": [
        "default",
        "^production",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/tsconfig.lib.json",
        "{workspaceRoot}/tsconfig.base.json"
      ],
      "outputs": [
        "{projectRoot}/dist/**/*.d.ts",
        "{projectRoot}/dist/**/*.d.ts.map",
        "{projectRoot}/dist/tsconfig.lib.tsbuildinfo"
      ],
      "metadata": {
        "description": "Type-check library and generate declarations",
        "technologies": ["typescript"]
      }
    },
    "typecheck:tsgo": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsgo --build tsconfig.lib.json --emitDeclarationOnly",
        "cwd": "libs/zenstack-form-plugin"
      },
      "dependsOn": ["^typecheck:tsgo"],
      "cache": true,
      "inputs": [
        "default",
        "^production",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/tsconfig.lib.json",
        "{workspaceRoot}/tsconfig.base.json"
      ],
      "outputs": [
        "{projectRoot}/dist/**/*.d.ts",
        "{projectRoot}/dist/**/*.d.ts.map",
        "{projectRoot}/dist/tsconfig.lib.tsbuildinfo"
      ],
      "metadata": {
        "description": "Type-check library with tsgo (38x faster)",
        "technologies": ["typescript", "tsgo"]
      }
    }
  }
}
